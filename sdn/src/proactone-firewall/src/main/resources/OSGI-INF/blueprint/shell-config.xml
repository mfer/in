<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.1.0">
        <command>
            <action class="proactone.firewall.app.cli.FwSrcRule_Add"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <null/>
            </completers>
        </command>
        <command>
            <action class="proactone.firewall.app.cli.FwDstRule_Add"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <null/>
            </completers>
        </command>
        <command>
            <action class="proactone.firewall.app.cli.FwPairRule_Add"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <null/>
            </completers>
        </command>
        <command>
            <action class="proactone.firewall.app.cli.FwRules_List"/>
        </command>
        <command>
            <action class="proactone.firewall.app.cli.FwSrcRule_Remove"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <null/>
            </completers>
        </command>
        <command>
            <action class="proactone.firewall.app.cli.FwDstRule_Remove"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <null/>
            </completers>
        </command>
        <command>
            <action class="proactone.firewall.app.cli.FwPairRule_Remove"/>
            <completers>
                <ref component-id="networkCompleter"/>
                <null/>
            </completers>
        </command>
        <command>
            <action class="proactone.firewall.app.cli.FwRules_RemoveALL"/>
        </command>

        <!-- TODO Lab 4: Insert RemoveHostCommand and RemoveNetworkCommand here-->

    </command-bundle>

    <bean id="networkCompleter" class="proactone.firewall.app.cli.RulesCompleter"/>

</blueprint>
